<p id="notice"><%= notice %></p>

<div class="panel panel-primary">
  <div class="panel-heading"> <%= @student.name %></div>
  <div class="panel-body">

    <p>
      <strong>Phone:</strong>
      <%= @student.phone %>
    </p>

    <p>
      <strong>Parent phone:</strong>
      <%= @student.parent_phone %>
    </p>

    <p>
      <strong>Notes:</strong>
      <%= @student.notes %>
    </p>

    <p>
      <strong>Balance:</strong>
      <%= @student.balance %>
    </p>

    <p>
      <strong>Rate(per hour):</strong>
      <%= @student.rate %>
    </p>

    <p>
      <strong>Email:</strong>
      <%= @student.email %>
    </p>

    <p>
      <strong>Parents email:</strong>
      <%= @student.parents_email %>
    </p>
  </div>
</div>

<div class="panel panel-warning">
  <div class="panel-heading">Recent Lessons</div>
  <div class="panel-body">
    <table class="table">
      <thead>
        <tr>
          <th>Date time</th>
          <th>Duration</th>
          <th colspan="1"></th>
        </tr>
      </thead>

      <tbody>
        <% @student.lessons.recent.each do |lesson| %>
          <tr>
            <td><%= lesson.date_time %></td>
            <td><%= lesson.duration %></td>
            <td><%= link_to 'View Details', student_lesson_path(@student, lesson), :class=>'btn btn-info btn-block' %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>

<div class="panel panel-success">
  <div class="panel-heading">Recent Account Credits</div>
  <div class="panel-body">
    Credits
    <%= @student.credits.recent %>
  </div>
</div>


<%= link_to 'Edit Student', edit_student_path(@student), :class=>'btn btn-primary' %>
<%= link_to 'Back To Student List', students_path, :class=>'btn btn-primary' %>
<%= link_to 'Add Lesson', new_student_lesson_path(@student), :class=>'btn btn-primary' %>
<%= link_to 'View Lesson History', student_lessons_path(@student), :class=>'btn btn-primary' %>
<%= link_to 'Add Credit', new_student_credit_path(@student), :class=>'btn btn-primary' %>
<%= link_to 'View Credit History', student_credits_path(@student), :class=>'btn btn-primary' %>
