<br><br>
<div class="card-columns">
  <% @students.each do |student| %>
    <a href="<%= student.base_uri %>">
      <div class="card">
        <div class="card-header <%= account_status(student) %>"><%= student.name %></div>
        <div class="card-block">
          <p class="card-text">Phone: <%= number_to_phone student.phone %></p>
          <p class="card-text">Balance: <%= number_to_currency student.balance %></p>
          <p class="card-text">Rate: <%= number_to_currency student.rate %></p>
          <p class="card-text">Lesson Day: <%= student.lesson_day.humanize %> <%= student.lesson_time %></p>
          <%= link_to 'View', student, :class=>'card-link' %>
        </div>
      </div>
    </a>
  <% end %>
  <div class="card">
    <div class="card-header card-primary">Get Started Here</div>
    <div class="card-block">
      <%= link_to 'Add New Student!', new_student_path, :class=>'btn btn-success btn-lg btn-block' %>
    </div>
  </div>
</div>