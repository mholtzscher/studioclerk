<br><br>
<div class="card-columns">
  <% @students.each do |student| %>
    <div class="card">
      <div class="card-header card-<%= account_status(student) %>"><%= student.name %></div>
      <div class="card-block">
        <p class="card-text">Phone: <%= number_to_phone student.phone %></p>
        <p class="card-text">Balance: <span class="tag tag-pill tag-<%= account_status(student)%>"><%= number_to_currency student.balance %></span></p>
        <p class="card-text">Rate: <%= number_to_currency student.rate %></p>
        <p class="card-text">Lesson Day: <%= student.lesson_day.humanize %> <%= student.lesson_time %></p>
        <%= link_to 'View Student', student, :class=>'btn btn-primary btn-block' %>
      </div>
    </div>
  <% end %>
  <div class="card">
    <div class="card-header">Add New Student</div>
    <div class="card-block">
      <p class="card-text">Get started keeping track of students in your private lesson studio here!</p>
      <br>
      <%= link_to 'Add New Student!', new_student_path, :class=>'btn btn-success btn-block' %>
      <br><br><br>
    </div>
  </div>
</div>