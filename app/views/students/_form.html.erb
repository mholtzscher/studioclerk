<%= form_for student, :html => {:class => "form-horizontal"}  do |f| %>
  <% if student.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(student.errors.count, "error") %> prohibited this student from being saved:</h2>

      <ul>
      <% student.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :name, class: "col-sm-2 control-label" %>
    <div class="col-md-8">
      <%= f.text_field :name, class: "form-control" %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :phone, class: "col-sm-2 control-label" %>
    <div class="col-md-8">
      <%= f.text_field :phone, class: "form-control" %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :parent_phone, class: "col-sm-2 control-label" %>
    <div class="col-md-8">
      <%= f.text_field :parent_phone, class: "form-control" %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :notes, class: "col-sm-2 control-label" %>
    <div class="col-md-8">
      <%= f.text_area :notes, class: "form-control" %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :balance, class: "col-sm-2 control-label" %>
    <div class="col-md-8">
      <%= f.text_field :balance, class: "form-control" %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :rate, class: "col-sm-2 control-label" %> (per hour)
    <div class="col-md-8">
      <%= f.text_field :rate, class: "form-control" %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :email, class: "col-sm-2 control-label" %>
    <div class="col-md-8">
      <%= f.text_field :email, class: "form-control" %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :parents_email, class: "col-sm-2 control-label" %>
    <div class="col-md-8">
      <%= f.text_field :parents_email, class: "form-control" %>
    </div>
  </div>

  <div class="form-group">
    <div class="col-md-8">
      <%= f.submit class: 'btn btn-default btn-primary' %>
  </div>
<% end %>
