<%= form_for [@student, credit] do |f| %>
  <% if credit.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(credit.errors.count, "error") %> prohibited this credit from being saved:</h2>

      <ul>
      <% credit.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :amount, class: "control-label" %>
    <%= f.text_field :amount, class: "form-control", required: true %>
  </div>

  <div class="form-group">
    <%= f.label :date_time, class: "control-label" %>
    <%= f.datetime_select :date_time, class: "form-control", ampm: true %>
  </div>
 
  <div class="form-group">
    <%= f.label :notes, class: "control-label" %>
    <%= f.text_field :notes, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.check_box :email_receipt %>
    <%= f.label :email_receipt, class: "control-label" %>
  </div>

  <div class="form-group">
    <%= f.submit class: 'btn btn-default btn-success' %>
  </div>
<% end %>
