<p id="notice"><%= notice %></p>

<h1>Lessons</h1>

<table class="table">
  <thead>
    <tr>
      <th>Date time</th>
      <th>Duration</th>
      <th>Notes</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @lessons.each do |lesson| %>
      <tr>
        <td><%= lesson.date_time %></td>
        <td><%= lesson.duration %></td>
        <td><%= lesson.notes %></td>
        <td><%= link_to 'View', student_lesson_path(@student, lesson), :class=>'btn btn-info btn-block' %></td>
        <td><%= link_to 'Edit', edit_student_lesson_path(@student, lesson), :class=>'btn btn-warning btn-block' %></td>
        <td><%= link_to 'Delete', student_lesson_path(@student, lesson), method: :delete, data: { confirm: 'Are you sure?' }, :class=>'btn btn-danger btn-block' %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Lesson', new_student_lesson_path, :class=>'btn btn-primary' %>
