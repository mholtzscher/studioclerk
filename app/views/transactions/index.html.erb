<p id="notice"><%= notice %></p>

<h1>Transactions</h1>

<table>
  <thead>
    <tr>
      <th>Ammount</th>
      <th>Date time</th>
      <th></th>
      <th>Credit</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @transactions.each do |transaction| %>
      <tr>
        <td><%= transaction.ammount %></td>
        <td><%= transaction.date_time %></td>
        <td><%= transaction.notes %></td>
        <td><%= transaction.credit %></td>
        <td><%= link_to 'Show', student_transaction_path(@student, transaction) %></td>
        <td><%= link_to 'Edit', edit_student_transaction_path(@student, transaction) %></td>
        <td><%= link_to 'Destroy', student_transaction_path(@student, transaction), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

