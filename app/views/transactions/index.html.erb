<p id="notice"><%= notice %></p>

<h1>Transactions</h1>

<table class="table">
  <thead>
    <tr>
      <th>Ammount</th>
      <th>Date time</th>
      <th></th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @transactions.each do |transaction| %>
      <tr>
        <td><%= transaction.ammount %></td>
        <td><%= transaction.date_time %></td>
        <td><%= transaction.notes %></td>
        <td><%= link_to 'View', student_transaction_path(@student, transaction), :class=>'btn btn-info btn-block' %></td>
        <td><%= link_to 'Edit', edit_student_transaction_path(@student, transaction), :class=>'btn btn-warning btn-block' %></td>
        <td><%= link_to 'Delete', student_transaction_path(@student, transaction), method: :delete, data: { confirm: 'Are you sure?' }, :class=>'btn btn-danger btn-block' %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Transaction', new_student_transaction_path, :class=>'btn btn-primary' %>
